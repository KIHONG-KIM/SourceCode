<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link href="/public/main.css" rel="stylesheet">
</head>

<body>
    <%- include('nav.html') %>

        <div class="bd-example m-4 border-1">
            <form action='/edit?_method=PUT' method="POST">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Todo List 수정 페이지</label>
                    <h4> 할일 </h4>
                    <input name="id" type="text" value="<%= data._id%>" name="id" style="display:none">
                    <input name='title' value="<%= data.할일 %>" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text"> 수정합니다. </div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">날짜</label>
                    <input name="date" value="<%= data.날짜 %>" class="form-control" id="exampleInputPassword1">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">글쓴이: <%= data.글쓴이 %> </label>
                    <input name="writer" value="<%= data.글쓴이 %>" class="form-control" type="hidden">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous">

            </script>
</body>

</html>